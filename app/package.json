{
  "name": "prompt-piper-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "pages:build": "bunx @cloudflare/next-on-pages",
    "pages:dev": "bunx wrangler pages dev .vercel/output/static",
    "pages:deploy": "bun run build && bun run pages:build && bunx wrangler pages deploy .vercel/output/static --project-name=prompt-piper-app",
    "deploy:preview": "bun run pages:deploy -- --branch=preview",
    "deploy:production": "bun run pages:deploy -- --branch=main"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "next": "15.0.0",
    "@tailwindcss/typography": "^0.5.13",
    "lucide-react": "^0.396.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.0.0",
    "js-tiktoken": "^1.0.21",
    "@huggingface/transformers": "^3.5.2",
    "@tensorflow/tfjs": "^4.22.0",
    "es-toolkit": "^1.39.10"
  },
  "devDependencies": {
    "typescript": "^5.5.3",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@tailwindcss/forms": "^0.5.7",
    "tailwindcss": "^3.4.4",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.39",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.0.0",
    "@cloudflare/next-on-pages": "^1.13.5",
    "wrangler": "^3.57.0",
    "vercel": "^34.2.0"
  }
}